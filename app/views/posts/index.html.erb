<% if vue_application? %>
  <div class="w-full">
    <%= render "posts/vue_components/first_vue_component"%>
    <%= render "posts/vue_components/second_vue_component"%>
    <%= render "posts/vue_components/third_vue_component"%>
  </div>
<% end %>

<% if react_application? %>
  <div class="w-full">
    <%= render "posts/react_components/first_react_component"%>
    <%= render "posts/react_components/second_react_component"%>
    <%= render "posts/react_components/third_react_component"%>
  </div>
<% end %>

<% if (react_application? == false ) and (vue_application? == false ) %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to 'New post', new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
<% end %>
