<% if (react_application? == false ) and (vue_application? == false ) %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="grid grid-rows-3 font-bold text-4xl">
      <div>
        Posts
      </div>

      <div>
        <%= link_to "React Posts", react_posts_path, class:"text-cyan-400 hover:scale-150 hover:text-cyan-500 transition duration-300" %>
      </div>

      <div>
        <%= link_to "Vue Posts", vue_posts_path, class:"text-emerald-400 hover:scale-150 hover:text-emerald-500 transition duration-300" %>
      </div>
    </h1>

    <%= link_to 'New post', new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
<% end %>
